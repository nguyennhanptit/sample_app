<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".Home"), root_path %></li>
        <li><%= link_to t(".Help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".Users") , "#" %></li>
          <li class="dropdown">
            <%= link_to "#", class:"dropdown-toggle", data:{toggle:"dropdown"} do %> <%= t ".Account" %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".Profile"), current_user %></li>
              <li><%= link_to t(".Settings"), "#" %></li>
              <li class="divider"></li>
              <li><%= link_to t(".Logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".Login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
